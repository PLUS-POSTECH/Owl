type Team {
  id: ID! @id
  name: String! @unique
  score: Int!
  endpoints: [Endpoint!]!
}

type Service {
  id: ID! @id
  createdAt: DateTime! @createdAt
  name: String! @unique
  description: String! @default(value: "")
  enabled: Boolean! @default(value: true)
  variants: [ServiceVariant!]!
  endpoints: [Endpoint!]!
}

type ServiceVariant {
  id: Int! @id
  service: Service!
  hash: String @unique
  attachment: String
}

type ServiceUpdateLog {
  id: Int! @id
  endpoint: Endpoint!
  variant: ServiceVariant!
  createdAt: DateTime! @createdAt
}

type Endpoint {
  id: ID! @id
  team: Team!
  service: Service!
  createdAt: DateTime! @createdAt
  connectionString: String!
  serviceUpdateLogs: [ServiceUpdateLog!]!
  tasks: [Task!]!
}

type Day {
  id: Int! @id
  name: String!
  startTime: DateTime!
  endTime: DateTime!
  roundDurationInSeconds: Int!
}

type Exploit {
  id: ID! @id
  target: Service!
  updatedAt: DateTime! @updatedAt
  name: String! @unique
  attachment: String
  tasks: [Task!]!
}

enum TaskStatus {
  PENDING
  EXPLOITING
  SUBMITTING

  SUBMIT_CORRECT
  SUBMIT_DUPLICATE
  SUBMIT_WRONG
  SUBMIT_SKIPPED

  EXPLOIT_INCOMPATIBLE
  EXPLOIT_TIMEOUT
  EXPLOIT_ERROR

  SUBMIT_ERROR

  UNKNOWN_ERROR
}

type Task {
  id: Int! @id
  exploit: Exploit!
  endpoint: Endpoint!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  status: TaskStatus! @default(value: PENDING)
  statusMessage: String! @default(value: "")
  flag: String
  exploitStdout: String! @default(value: "")
  exploitStderr: String! @default(value: "")
  authStdout: String! @default(value: "")
  authStderr: String! @default(value: "")
}
