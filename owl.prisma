type User {
  id: ID! @id
  name: String!
}

type Team {
  id: ID! @id
  name: String! @unique
  score: Int!
  endpoints: [Endpoint!]!
}

type Service {
  id: ID! @id
  createdAt: DateTime! @createdAt
  name: String! @unique
  description: String! @default(value: "")
  enabled: Boolean! @default(value: true)
  variants: [ServiceVariant!]!
  endpoints: [Endpoint!]!
}

type ServiceVariant {
  id: Int! @id
  service: Service!
  hash: String @unique
  attachment: String
}

type ServiceUpdateLog {
  id: Int! @id
  endpoint: Endpoint!
  variant: ServiceVariant!
  createdAt: DateTime! @createdAt
}

type Endpoint {
  id: ID! @id
  team: Team!
  service: Service!
  createdAt: DateTime! @createdAt
  connectionString: String!
  serviceUpdateLogs: [ServiceUpdateLog!]!
}

type Day {
  id: Int! @id
  name: String!
  startTime: DateTime!
  endTime: DateTime!
  roundDurationInSeconds: Int!
}
