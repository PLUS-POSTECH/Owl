type Team {
  id: ID! @id
  name: String! @unique
  score: Int!
  endpoints: [Endpoint!]!
}

type Service {
  id: ID! @id
  createdAt: DateTime! @createdAt
  name: String! @unique
  description: String! @default(value: "")
  enabled: Boolean! @default(value: true)
  variants: [ServiceVariant!]!
  endpoints: [Endpoint!]!
}

type ServiceVariant {
  id: Int! @id
  service: Service!
  hash: String @unique
  attachment: String
}

type ServiceUpdateLog {
  id: Int! @id
  endpoint: Endpoint!
  variant: ServiceVariant!
  createdAt: DateTime! @createdAt
}

type Endpoint {
  id: ID! @id
  team: Team!
  service: Service!
  createdAt: DateTime! @createdAt
  connectionString: String!
  serviceUpdateLogs: [ServiceUpdateLog!]!
}

type Day {
  id: Int! @id
  name: String!
  startTime: DateTime!
  endTime: DateTime!
  roundDurationInSeconds: Int!
}

type Exploit {
  id: ID! @id
  target: Service!
  updatedAt: DateTime! @updatedAt
  name: String! @unique
  attachment: String
}

enum TaskStatus {
  PENDING
  RUNNING
  ERROR
  DONE
}

type Task {
  id: Int! @id
  exploit: Exploit!
  endpoint: Endpoint!
  runner: TaskRunner
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  status: TaskStatus! @default(value: PENDING)
  log: String
}

type TaskRunner {
  id: ID! @id
  name: String!
  idle: Boolean! @default(value: true)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  tasks: [Task!]!
}
